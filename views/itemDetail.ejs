<%- include('partials/head') %> <!-- ejs include, sort of importing code that can be reused to other module/file -->
<body>
    <%- include('partials/navbar') %> 
    <main class="mt-5 mx-auto" style="width: 80vw">
        <h1><%= item.name %></h1>
        <p><strong>Category:</strong>
            <% for(let i = 0; i < item.category.length; i++) { %>
                <a href="<%= item.category[i].url %>"><%= item.category[i].name %><% (i < item.category.length - 1) ? "," : "" %></a>
            <% } %>
        </p>
        <p><strong>Description:</strong> <%= item.description %></p>
        <p><strong>Price:</strong> <%= item.price %></p>
        <p><strong>Quantity:</strong> <%= item.quantity %></p>
        <hr>
        <a href="<%= item.url %>/delete" class="btn btn-danger">Delete Item</a>
        <a href="<%= item.url %>/update" class="btn btn-success">Update Item</a>
    </main>
</body>
</html>